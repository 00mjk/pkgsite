{{define "details_content"}}
  <div class="ModuleContent-list">
    {{if eq .ModulePath "std"}}
      <h2>Packages in the Go Standard Library</h2>
    {{else}}
      <h2>Packages in this module</h2>
      <p class="ModuleContent-subtitle"><strong>Module: </strong>{{.ModulePath}}</p>
    {{end}}

    {{range .Packages}}
      <p>
        <div>
          <a href="/pkg/{{.Path}}@{{.Version}}">
            <b>{{.Suffix}}</b>
          </a>
        </div>
        <div>{{.Synopsis}}</div>
      </p>
    {{end}}
  </div>
{{end}}
