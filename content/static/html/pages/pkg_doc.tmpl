{{define "details_content"}}
  {{if .Documentation}}
    <div class="Documentation">
      {{.Documentation}}
      <div class="Documentation-build">
        <div>GOOS={{.GOOS}}</div>
        <div>GOARCH={{.GOARCH}}</div>
      </div>
    </div>

    <dialog class="JumpDialog">
      <h2 class="JumpDialog-title">Jump to identifier</h2>
      <form method="dialog">
        <div class="JumpDialog-filter">
         <input class="JumpDialog-input" autocomplete="off" type="text">
        </div>
        <div class="JumpDialog-body">
          <div class="JumpDialog-list"></div>
        </div>
        <div class="JumpDialog-actions">
          <button class="JumpDialog-button">Close</button>
	</div>
      </form>
    </dialog>

  {{else}}
    {{template "empty_content" "No documentation available for this package!"}}
  {{end}}
{{end}}

{{define "details_post_content"}}
  <script nonce="{{.Nonce}}" src="/static/thirdparty/dialog-polyfill/dialog-polyfill.js?version={{.AppVersionLabel}}"></script>
  <script nonce="{{.Nonce}}" src="/static/js/jump.js?version={{.AppVersionLabel}}"></script>
{{end}}
