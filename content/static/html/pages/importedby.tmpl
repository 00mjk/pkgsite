{{define "details_content"}}
  <div>
    {{if (eq 0 (len .ExternalImportedBy)) and (eq 0 (len .InternalImportedBy))}}
      <img class="ImportedBy-gopher" src="/static/img/gopher-airplane.jpg" alt="The Go Gopher">
      <h3 class="ImportedBy-noneMessage">No known importers for this package!</h3>
    {{else}}
      <h2>Imported by</h2>
      {{if .ExternalImportedBy}}
      <p>
        <b>Known importers: </b>
        <span>{{len .ExternalImportedBy}}</span>
      </p>
      <ul class="ImportedBy-list">
        {{range .ExternalImportedBy}}
          <li><a class="u-breakWord" href="/pkg/{{.}}">{{.}}</a></li>
        {{end}}
      </ul>
      {{end}}

      {{if .InternalImportedBy}}
        <h3>Module: {{.ModulePath}}</h3>
        <ul class="ImportedBy-list">
        {{range .InternalImportedBy}}
          <li><a class="u-breakWord" href="/pkg/{{.}}">{{.}}</a></li>
        {{end}}
        </ul>
      {{end}}
    {{end}}
  </div>
{{end}}
