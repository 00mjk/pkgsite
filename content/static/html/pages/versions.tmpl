{{define "details_content"}}
  <div class="Versions">
    {{$packageSeriesHasMultipleModules := (gt (len $.Versions) 1)}}
    {{range $series := .Versions}}
        {{$seriesPath := $series.Series}}
      {{range $major := .MajorVersions}}
      <h2>
        {{$major.Major}}
        {{if $packageSeriesHasMultipleModules}}<span class="Versions-seriesPath">{{$seriesPath}}</span>{{end}}
      </h2>
      {{range $majMin := $major.MinorVersions}}
        {{range $i, $v := $majMin.PatchVersions}}
	  {{if eq $i 0}}<h3>{{else}}<h4>{{end}}
              <a href="/pkg/{{$v.Path}}@{{$v.Version}}">{{$v.Version}}</a>
              <span class="Versions-commitTime"> - {{$v.CommitTime}}</span>
	  {{if eq $i 0}}</h3>{{else}}</h4>{{end}}
        {{end}}
      {{end}}
      {{end}}
    {{end}}
  </div>
{{end}}
